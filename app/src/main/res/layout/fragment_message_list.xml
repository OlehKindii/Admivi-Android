<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.profile.chat.MessageListFragment"
    android:background="@color/lightBlue"
    android:orientation="vertical">

    <include layout="@layout/layout_navigation"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:text="Chats"
        android:layout_marginStart="@dimen/dim16"
        android:layout_marginTop="@dimen/dim16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rclMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim16"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_comment_shimer"/>

                <include layout="@layout/layout_comment_shimer"/>

                <include layout="@layout/layout_comment_shimer"/>

                <include layout="@layout/layout_comment_shimer"/>

                <include layout="@layout/layout_comment_shimer"/>

                <include layout="@layout/layout_comment_shimer"/>

                <include layout="@layout/layout_comment_shimer"/>

                <include layout="@layout/layout_comment_shimer"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </RelativeLayout>

</LinearLayout>