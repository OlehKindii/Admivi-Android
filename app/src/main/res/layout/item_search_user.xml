<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:paddingHorizontal="@dimen/dim10"
    android:paddingTop="@dimen/dim10"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/llt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dim10"
        android:background="@null">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim70"
            android:layout_height="@dimen/dim70"
            cardBackgroundColor="@null"
            app:cardElevation="0dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_placehoder"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dim10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim10"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtUserName"
                    style="@style/text16"
                    android:textColor="@color/darkGray"
                    android:textStyle="bold"
                    android:text="123"/>

                <ImageView
                    android:id="@+id/imgVerify"
                    android:layout_width="@dimen/dim16"
                    android:layout_height="@dimen/dim16"
                    android:layout_marginStart="@dimen/dim6"
                    android:src="@drawable/ic_verified"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:minWidth="@dimen/dim20"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtSeguiendo"
                    style="@style/text12"
                    android:textColor="@color/lightGray"
                    android:text="123"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim10"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtPostCount"
                    style="@style/text14"
                    android:textColor="@color/darkLightGray"
                    android:textStyle="bold"
                    android:text="123"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:minWidth="@dimen/dim20"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtSiguiendo"
                    style="@style/text12"
                    android:textColor="@color/lightGray"
                    android:text="123"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim12"
        android:layout_marginTop="@dimen/dim10"
        android:background="@color/lighterGray"/>

</LinearLayout>