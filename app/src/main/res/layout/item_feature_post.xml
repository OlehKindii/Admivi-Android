<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginStart="@dimen/dim15">
    
    <RelativeLayout
        android:layout_width="235dp"
        android:layout_height="325dp"
        android:background="@drawable/round_white_full"
        android:clipChildren="true">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/imgPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_post_placeholder"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="@dimen/dim15"
            app:sriv_right_top_corner_radius="@dimen/dim15"
            app:sriv_left_bottom_corner_radius="@dimen/dim15"
            app:sriv_right_bottom_corner_radius="@dimen/dim15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/round_feature_deco15">

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dim32"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:background="@drawable/round_white45">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null">

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp">

                        <ImageView
                            android:id="@+id/imgUser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/onboarding1"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgVerify"
                    android:layout_width="@dimen/dim12"
                    android:layout_height="@dimen/dim12"
                    android:src="@drawable/ic_verified"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/text18"
                android:layout_marginStart="@dimen/dim6"
                android:layout_marginEnd="@dimen/dim6"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="title"
                android:textAlignment="center"
                android:maxLines="3"
                android:inputType="textMultiLine"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/dim4"/>

            <WebView
                android:id="@+id/webLink"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim100"
                android:layout_marginStart="@dimen/dim6"
                android:layout_marginEnd="@dimen/dim6"
                android:scrollIndicators="none"
                android:scrollbars="none"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dim15"
                android:paddingEnd="@dimen/dim15"
                android:layout_marginTop="@dimen/dim10"
                android:layout_marginBottom="@dimen/dim6"
                android:background="@null"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|left">

                    <ImageView
                        android:layout_width="@dimen/dim16"
                        android:layout_height="@dimen/dim16"
                        android:src="@drawable/ic_comment"
                        app:tint="@android:color/white"/>

                    <TextView
                        android:id="@+id/txtComentCnt"
                        android:layout_marginStart="@dimen/dim6"
                        style="@style/text14"
                        android:text="+9"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@null">

                    <ImageView
                        android:layout_width="@dimen/dim16"
                        android:layout_height="@dimen/dim16"
                        android:src="@drawable/ic_thumb_up"
                        app:tint="@android:color/white"/>

                    <TextView
                        android:id="@+id/txtVote"
                        android:layout_marginStart="@dimen/dim6"
                        style="@style/text14"
                        android:text="+9"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="@dimen/dim16"
                        android:layout_height="@dimen/dim16"
                        android:src="@drawable/ic_book"
                        app:tint="@android:color/white"/>

                    <TextView
                        android:id="@+id/txtReadTime"
                        android:layout_marginStart="@dimen/dim6"
                        style="@style/text14"
                        android:text="+933"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lltTrail"
        android:orientation="horizontal"
        android:layout_width="@dimen/dim15"
        android:layout_height="match_parent"
        android:background="@null"/>

</LinearLayout>