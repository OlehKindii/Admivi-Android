<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:paddingStart="@dimen/dim100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@null"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim15"
        android:layout_marginEnd="@dimen/dim10"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:gravity="end"
        android:background="@drawable/round16_white_black">

        <TextView
            android:id="@+id/txtMessage"
            style="@style/text16"
            android:padding="@dimen/dim10"
            android:textColor="@color/black_white"
            android:text="123456"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/crdImgMsg"
            android:layout_width="150dp"
            android:layout_height="@dimen/dim100"
            android:layout_marginTop="@dimen/dim10"
            android:layout_marginEnd="@dimen/dim15"
            android:layout_marginBottom="@dimen/dim15"
            android:layout_marginStart="@dimen/dim15"
            app:cardBackgroundColor="@null"
            app:cardCornerRadius="@dimen/dim16"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>