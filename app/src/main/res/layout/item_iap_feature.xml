<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dim12"
    android:paddingStart="@dimen/dim15"
    android:paddingBottom="@dimen/dim24">

    <androidx.cardview.widget.CardView
        android:id="@+id/crdBG"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#343434"
        app:cardCornerRadius="@dimen/dim16"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="9:16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@null"
            android:paddingVertical="@dimen/dim16"
            android:paddingHorizontal="@dimen/dim24"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtNo"
                style="@style/text20"
                android:textSize="120sp"
                android:textColor="@color/mainOrange"
                android:text="1"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.8"/>

            <TextView
                android:id="@+id/txtDuration"
                style="@style/text20"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Dias 1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtPrice"
                style="@style/text18"
                android:textColor="@android:color/white"
                android:text="5.99 €"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.8"/>

            <TextView
                android:id="@+id/txtDesc"
                style="@style/text18"
                android:textColor="@color/mainOrange"
                android:text="Básico"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lltTrail"
        android:layout_width="@dimen/dim15"
        android:layout_height="match_parent"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@+id/crdBG"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>