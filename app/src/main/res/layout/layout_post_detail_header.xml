<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim55"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dim10"
    android:paddingEnd="@dimen/dim10"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/lltAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim4"
        android:background="@drawable/ring_shape_2">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim32"
            android:layout_height="@dimen/dim32"
            app:cardBackgroundColor="@null"
            app:cardCornerRadius="@dimen/dim16"
            android:foregroundGravity="center"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_placehoder"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@null"
        android:padding="@dimen/dim4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@null"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_username"
                style="@style/text14"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_verified"
                android:layout_width="@dimen/dim16"
                android:layout_height="@dimen/dim16"
                android:layout_marginStart="@dimen/dim4"
                android:src="@drawable/ic_verified"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtUserPoints"
            style="@style/text12"
            android:text=""
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btnUnFollow"
        android:layout_width="@dimen/dim90"
        android:layout_height="@dimen/dim32"
        android:background="@drawable/round_white_alpha16"
        android:text="Siguiendo"
        android:textSize="12dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <android.widget.Button
        android:id="@+id/btnFollow"
        android:layout_width="@dimen/dim90"
        android:layout_height="@dimen/dim32"
        android:background="@drawable/round_transparent16"
        android:text="Seguir"
        android:textSize="12dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <android.widget.Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/dim100"
        android:layout_height="@dimen/dim32"
        android:background="@drawable/round_blue16"
        android:text="Destacar post"
        android:textSize="12dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:visibility="visible"/>

</LinearLayout>