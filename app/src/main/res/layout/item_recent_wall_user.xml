<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:layout_marginStart="@dimen/dim15">

    <RelativeLayout
        android:id="@+id/rltMainBG"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_border_green"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="38dp"
            app:cardBackgroundColor="@null"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_placehoder"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imgVerify"
            android:layout_width="@dimen/dim20"
            android:layout_height="@dimen/dim20"
            android:src="@drawable/ic_verified"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lltTrail"
        android:layout_width="@dimen/dim15"
        android:layout_height="0dp"
        android:orientation="horizontal"/>

</LinearLayout>