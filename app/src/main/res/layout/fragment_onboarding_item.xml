<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.auth.onboarding.OnboardingItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_onboarding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/onboarding1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txt_onboarding_title"
            style="@style/text20"
            android:text=""
            android:textColor="@color/darkGray"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/txt_onboarding_content"
            style="@style/text14"
            android:text="@string/onBoardingContent3"
            android:textColor="@color/darkLightGray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="@dimen/dim24"
            android:layout_marginRight="@dimen/dim24"
            android:layout_marginBottom="70dp"
            android:textAlignment="center"/>

    </LinearLayout>

</FrameLayout>