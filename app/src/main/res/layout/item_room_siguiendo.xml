<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:paddingStart="@dimen/dim15"
    android:paddingBottom="@dimen/dim15"
    android:paddingTop="@dimen/dim15">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@null">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/crdAddRoom"
                android:layout_width="@dimen/dim100"
                android:layout_height="@dimen/dim100"
                app:cardBackgroundColor="@color/mainGreen"
                android:elevation="0dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add"
                    app:tint="@android:color/white"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/lltUser"
                android:layout_width="@dimen/dim100"
                android:layout_height="@dimen/dim100"
                android:padding="6dp"
                android:background="@drawable/round_border_green"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="44dp"
                    android:background="@null"
                    android:elevation="0dp">

                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/onboarding1"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtUserName"
            android:layout_marginTop="@dimen/dim6"
            style="@style/text14"
            android:textColor="@color/black_white"
            android:text="123"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lltTrail"
        android:layout_width="@dimen/dim15"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical"/>

</LinearLayout>