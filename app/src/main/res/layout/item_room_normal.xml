<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dim6"
    android:layout_marginEnd="@dimen/dim6"
    android:layout_marginBottom="@dimen/dim15"
    android:background="@drawable/round_lightgray6"
    android:orientation="horizontal"
    android:padding="@dimen/dim12">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:background="@drawable/round_border_green"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="44dp"
            android:background="@null"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/onboarding1"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@null"
        android:paddingStart="@dimen/dim12">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@null">

            <TextView
                android:id="@+id/txtUserName"
                style="@style/text18"
                android:textColor="@color/mainGreen"
                android:textStyle="bold"
                android:text="123"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/dim24"
                android:layout_height="@dimen/dim24"
                android:src="@drawable/ic_groups"
                app:tint="@color/black_white"/>

            <TextView
                android:id="@+id/txtMemberCnt"
                style="@style/text14"
                android:layout_marginStart="@dimen/dim10"
                android:text="123"
                android:textColor="@color/black_white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            style="@style/text20"
            android:layout_marginTop="@dimen/dim12"
            android:textColor="@color/black_white"/>

    </LinearLayout>

</LinearLayout>