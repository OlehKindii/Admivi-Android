<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.profile.WalletFragment"
    android:background="@color/white_black"
    android:orientation="vertical">

    <include layout="@layout/layout_navigation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical"
        android:padding="@dimen/dim16">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim16"
            app:cardBackgroundColor="#1D1D1D"
            app:cardCornerRadius="@dimen/dim16"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/rltVentas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dim16"
                android:background="@android:color/transparent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver mis ventas"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dim20"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdRed"
                    android:layout_width="@dimen/dim12"
                    android:layout_height="@dimen/dim12"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dim16"
                    app:cardBackgroundColor="@color/mainRed"
                    app:cardCornerRadius="@dimen/dim10" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#1D1D1D"
            app:cardCornerRadius="@dimen/dim16"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dim16"
                    android:layout_marginHorizontal="@dimen/dim16">

                    <TextView
                        style="@style/text20"
                        android:textStyle="bold"
                        android:text="Dinero acumulado"
                        android:textColor="@android:color/white"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdQuestion1"
                        android:layout_width="@dimen/dim16"
                        android:layout_height="@dimen/dim16"
                        app:cardCornerRadius="@dimen/dim16"
                        android:layout_marginStart="@dimen/dim6"
                        app:cardBackgroundColor="@color/mainOrange"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="@dimen/dim10"
                            android:layout_height="@dimen/dim10"
                            android:src="@drawable/ic_question"
                            android:layout_gravity="center"
                            app:tint="@android:color/white"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/text18"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:text="USD"
                        android:textColor="#666666"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtAccmulation"
                    style="@style/text18"
                    android:textSize="80sp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/mainOrange"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <android.widget.Button
                    android:id="@+id/btnRequest"
                    style="@style/AppButton"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="@dimen/dim45"
                    android:layout_marginEnd="@dimen/dim45"
                    android:layout_marginBottom="@dimen/dim32"
                    android:background="@drawable/round_darggray8"
                    android:text="Solicitar"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dim16"
            app:cardBackgroundColor="#1D1D1D"
            app:cardCornerRadius="@dimen/dim16"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dim16"
                    android:layout_marginHorizontal="@dimen/dim16">

                    <TextView
                        style="@style/text20"
                        android:textStyle="bold"
                        android:text="Créditos"
                        android:textColor="@android:color/white"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdQuestion2"
                        android:layout_width="@dimen/dim16"
                        android:layout_height="@dimen/dim16"
                        app:cardCornerRadius="@dimen/dim16"
                        android:layout_marginStart="@dimen/dim6"
                        app:cardBackgroundColor="@color/mainOrange"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="@dimen/dim10"
                            android:layout_height="@dimen/dim10"
                            android:src="@drawable/ic_question"
                            android:layout_gravity="center"
                            app:tint="@android:color/white"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/lltTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical|end">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_info"
                            app:tint="@color/lightGray"/>

                        <TextView
                            style="@style/text14"
                            android:layout_marginStart="@dimen/dim10"
                            android:text="Política de créditos"
                            android:textColor="@color/lightGray"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtCredit"
                    style="@style/text18"
                    android:textSize="80sp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/mainOrange"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim32">

                    <android.widget.Button
                        android:id="@+id/btnBuy"
                        style="@style/AppButton"
                        android:layout_marginStart="@dimen/dim45"
                        android:layout_marginEnd="@dimen/dim45"
                        android:background="@drawable/round_dark6"
                        android:text="Depositar - 5.49 créditos"
                        android:layout_centerInParent="true"/>

                    <ImageView
                        android:id="@+id/imgPrev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back_grey"
                        android:layout_centerVertical="true"
                        app:tint="@android:color/white"
                        android:layout_marginStart="@dimen/dim16"/>

                    <ImageView
                        android:id="@+id/imgNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/dim10"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>