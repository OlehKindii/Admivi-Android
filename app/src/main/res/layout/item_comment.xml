<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_white_dark16"
        android:padding="@dimen/dim6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lltAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ring_shape_2"
                android:padding="@dimen/dim4">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dim32"
                    android:layout_height="@dimen/dim32"
                    app:cardBackgroundColor="@null"
                    app:cardCornerRadius="@dimen/dim16"
                    android:foregroundGravity="center"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user_placehoder"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@null"
                android:padding="@dimen/dim4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@null"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txt_username"
                        style="@style/text14"
                        android:textColor="@color/mainOrange"
                        android:textStyle="bold"
                        android:text=""/>

                    <ImageView
                        android:id="@+id/img_verified"
                        android:layout_width="@dimen/dim16"
                        android:layout_height="@dimen/dim16"
                        android:layout_marginStart="@dimen/dim4"
                        android:src="@drawable/ic_verified"/>

                    <TextView
                        android:id="@+id/txtUserPoints"
                        android:layout_marginStart="@dimen/dim6"
                        style="@style/text12"
                        android:text=""
                        android:textColor="@color/lightGray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtCreated"
                        android:layout_marginStart="@dimen/dim6"
                        style="@style/text12"
                        android:text=""
                        android:textColor="@color/lightGray"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtComment"
                    style="@style/text16"
                    android:layout_marginTop="@dimen/dim10"
                    android:layout_marginBottom="@dimen/dim6"
                    android:textColor="@color/darkGray"
                    android:text="123456"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lltHandle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim4"
            android:orientation="horizontal"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/dim6"
            android:layout_marginStart="@dimen/dim6">

            <ImageView
                android:id="@+id/imgLikeDisable"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:src="@drawable/ic_diable_like"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:src="@drawable/ic_like"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgLiked"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:src="@drawable/ic_select_like"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtNetVote"
                style="@style/text14"
                android:layout_marginEnd="@dimen/dim10"
                android:layout_marginStart="@dimen/dim10"
                android:textColor="@color/lightGray"/>

            <ImageView
                android:id="@+id/imgDisLiked"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:src="@drawable/ic_select_unlike"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgDisLike"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:src="@drawable/ic_unlike"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgDisLikeDisable"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:src="@drawable/ic_diable_unlike"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtEdit"
                android:layout_marginStart="@dimen/dim10"
                style="@style/text14"
                android:textColor="@color/lightGray"
                android:text="Editar"/>

            <TextView
                android:id="@+id/txtDelete"
                android:layout_marginStart="@dimen/dim10"
                style="@style/text14"
                android:textColor="@color/lightGray"
                android:text="Eliminar"/>

            <TextView
                android:id="@+id/txtCommentComment"
                android:layout_marginStart="@dimen/dim10"
                style="@style/text14"
                android:textColor="@color/lightGray"
                android:text="Responder"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lltHandleComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim6"
            android:background="@null"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/txtCommentEdit"
                android:layout_marginStart="@dimen/dim10"
                style="@style/text14"
                android:textColor="@color/lightGray"
                android:text="Editar"/>

            <TextView
                android:id="@+id/txtCommentDelete"
                android:layout_marginStart="@dimen/dim10"
                style="@style/text14"
                android:textColor="@color/lightGray"
                android:text="Borrar"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lltLastComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dim6"
        android:layout_marginEnd="@dimen/dim10"
        android:background="@null">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim24"
            android:layout_height="@dimen/dim24"
            app:cardCornerRadius="@dimen/dim16"
            app:cardElevation="0dp"
            android:layout_marginStart="@dimen/dim10"
            android:layout_marginEnd="@dimen/dim10"
            app:cardBackgroundColor="@null">

            <ImageView
                android:id="@+id/imgUserLastComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/onboarding1"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCntAnswer"
            style="@style/text14"
            android:textColor="@android:color/darker_gray"
            android:text="123 respuestas"/>

    </LinearLayout>

</LinearLayout>